{
  "name": "n8n-nodes-polygon",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Polygon blockchain (PoS and zkEVM) providing 7 resources and 30+ operations for accounts, transactions, tokens, NFTs, smart contracts, and real-time event monitoring.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-polygon.git"
  },
  "bugs": {
    "url": "https://github.com/Velocity-BPA/n8n-nodes-polygon/issues"
  },
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-polygon#readme",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "polygon",
    "matic",
    "blockchain",
    "ethereum",
    "evm",
    "web3",
    "defi",
    "nft",
    "smart-contracts",
    "zkevm",
    "layer2"
  ],
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/PolygonRpc.credentials.js",
      "dist/credentials/PolygonScan.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Polygon/Polygon.node.js",
      "dist/nodes/Polygon/PolygonTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.35.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "ethers": "^6.12.1",
    "axios": "^1.7.2"
  }
}
